<mapper namespace="com.ejemplo.proyectoprueba.mapper.TareaMapper">

    <insert id="insertarTarea" parameterType="com.ejemplo.proyectoprueba.model.Tarea">
        INSERT INTO tareas (nombre, descripcion, fechaInicio) VALUES (#{nombre}, #{descripcion}, #{fechaInicio})
    </insert>

    <select id="listarTareas" resultType="com.ejemplo.proyectoprueba.model.Tarea">
        SELECT * FROM tareas
    </select>

</mapper>
