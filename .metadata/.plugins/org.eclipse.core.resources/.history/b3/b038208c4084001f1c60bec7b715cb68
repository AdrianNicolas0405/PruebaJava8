    <resultMap id="TareaResult" type="com.ejemplo.proyectoprueba.model.Tarea">
        <id column="id" property="id" />
        <result column="nombre" property="nombre" />
        <result column="descripcion" property="descripcion" />
        <result column="fecha_inicio" property="fechaInicio" /> <!-- Cambié a snake_case para consistencia -->
    </resultMap>

    <insert id="insertarTarea" parameterType="com.ejemplo.proyectoprueba.model.Tarea">
        INSERT INTO Tareas (nombre, descripcion, fechaInicio) <!-- Cambié a snake_case para consistencia -->
        VALUES (#{nombre}, #{descripcion}, #{fechaInicio})
    </insert>

    <select id="listarTareas" resultMap="TareaResult">
        SELECT * FROM Tareas
    </select>

